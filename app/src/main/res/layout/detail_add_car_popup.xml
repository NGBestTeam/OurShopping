<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:background="#fff"
              android:layout_height="match_parent">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/detail_add_car_img"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="50dp"
            android:src="@mipmap/touxiang"
            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/detail_add_car_title"

                android:layout_width="match_parent"
                android:layout_weight="2"
                android:layout_height="match_parent"
                android:text="商品信息"
                android:gravity="center_vertical"
                />
            <TextView
                android:id="@+id/detail_add_car_money"

                android:layout_width="match_parent"
                android:layout_weight="5"
                android:layout_height="match_parent"
                android:text="商品价格"
                android:gravity="center_vertical"

                />
        </LinearLayout>
        <ImageView
            android:id="@+id/detail_add_car_cancel"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="30dp"
            android:src="@android:drawable/ic_delete"

            />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        >
        <TextView

            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:text="合计： ￥"
            android:gravity="right|center_vertical"
            android:paddingLeft="20dp"
            android:textColor="@color/login_red"
            />

        <TextView
            android:id="@+id/detail_add_car_allmoney"

            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:text="12.60"
            android:gravity="left|center_vertical"
            android:paddingLeft="20dp"
            android:textColor="@color/login_red"
            />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|right"
            android:paddingRight="20dp"

            >
            <TextView
                android:id="@+id/detail_add_car_minus"

                android:layout_width="40dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:text="-"
                android:background="@drawable/operation_left"
                />
            <EditText
                android:id="@+id/detail_add_car_num"

                android:layout_width="40dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:inputType="number"
                android:text="1"
                android:textSize="10sp"
                android:background="@drawable/operation_middle"
                />
            <TextView
                android:id="@+id/detail_add_car_add"

                android:layout_width="40dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:text="+"
                android:background="@drawable/operation_right"
                />
        </LinearLayout>


    </LinearLayout>
    <Button
        android:id="@+id/detail_add_car_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/login_orign"
        android:text="加入购物车"
        android:textColor="#fff"
        android:gravity="center"
        />
</LinearLayout>