<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_change_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bestteam.supermarket.activity.ChangeInfoActivity">
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/change_toolbar_id"
        >
        <TextView
            android:id="@+id/change_tv_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/btn_back_orange"
            android:onClick="back"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="个人资料"
            android:layout_gravity="center"
            android:textSize="20sp"
            />
        <TextView
            android:id="@+id/change_tv_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="编辑"
            android:layout_gravity="end"
            android:onClick="edit"
            />
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_below="@id/change_toolbar_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorGray"
            />
        <RelativeLayout
            android:id="@+id/change_layout_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="更换头像"
                android:background="@null"
                android:gravity="left|center_vertical"
                />
            <android.support.v7.widget.CardView
                android:layout_marginRight="30dp"
                android:layout_alignParentRight="true"
                app:cardCornerRadius="50dp"
                android:layout_width="60dp"
                android:layout_height="60dp">
             <ImageView
                android:id="@+id/change_user_img"
                android:layout_width="60dp"
                android:layout_height="60dp"
                />
              </android.support.v7.widget.CardView>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorGray"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="昵称:"
                android:textSize="20sp"
                android:textColor="@color/colorBlack"/>
            <EditText
                android:id="@+id/change_et_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="18813052141"
                android:enabled="false"
                android:background="@color/colorWhite"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorGray"
            />
        <RadioGroup
            android:id="@+id/rg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

           >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="性别："
                android:textColor="@color/colorBlack"
                android:textSize="20sp"/>
            <RadioButton
                android:id="@+id/rb_man"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="男"
                android:textColor="@color/colorOrange"
                android:checked="true"
                android:enabled="false"
               />
            <RadioButton
                android:id="@+id/rb_woman"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="女"
                android:textColor="@color/colorOrange"
                android:enabled="false"
                />
        </RadioGroup>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorGray"
            />

        <Button
            android:id="@+id/change_btn_commit"
            android:layout_below="@id/rg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="点击提交"
            android:background="@color/colorOrange"
            android:visibility="gone"
            android:onClick="commit"/>

    </LinearLayout>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="想要修改信息?点击屏幕右上角的编辑吧"
        android:textColor="@color/login_red"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true"/>


</RelativeLayout>
